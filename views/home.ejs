<h1>The home page</h1>
<section id="feed-form">
   <h4>Posts</h4>
   <% if(locals.user){%>

   <form action="/posts/create" method="post" id="new-feed-form">
    <textarea name="content" cols="40" rows="5" placeholder="Type Here..." required></textarea>
    <input type="submit" value="Post">
   </form>
   <%}%>
   <div id="post-list-container">
    <ul>
        <%for(post of posts){%>
            <%-include('_posts')-%>
            
        <%}%>
        
    </ul>
   </div>
   <%-include('_chatbox')-%>
</section>

<section id="users_friends">
    <h4>Friends</h4>
    <%for (u of all_users){%>
        <p>
            <a href="/users/profile/<%=u.id %>"><%=u.name%></a>
        </p>
    <%}%>

    </section>
<script src="/js/home_post.js"></script>
<script src="/js/toggleLike.js"></script>
<script>
    $('.toggle-like-button').each(function(){
        let self=this;
        let toggleLike= new ToggleLike(self);
    });
</script>
<script src="/js/socket.js"></script>
<script src="/js/chat_engine.js"></script>
<%if(locals.user){%>
    <script>
       new chatEngine('user-chat-box',"<%=locals.user.email%>")
    </script>
<%}%>